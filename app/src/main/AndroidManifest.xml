<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cyrillrx.rpg">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".HomeActivity" />

        <activity
            android:name=".dnd.spellbook.SpellBookActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".dnd.spellbook.SpellBookComposeActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".dnd.spellbook.SpellDetailActivity"
            android:theme="@style/NoActionBar" />

        <activity
            android:name=".dnd.bestiary.BestiaryActivity"
            android:theme="@style/NoActionBar" />

        <activity
            android:name=".dnd.inventory.InventoryActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".dnd.inventory.InventoryComposeActivity"
            android:theme="@style/NoActionBar" />

        <activity android:name=".game.GameListActivity" />
        <activity android:name=".group.CharacterListActivity" />

    </application>
</manifest>
